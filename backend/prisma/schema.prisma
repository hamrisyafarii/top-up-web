generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id        String   @id @default(uuid())
  title     String
  developer String
  image     String
  category  String
  puoplar   Boolean?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
