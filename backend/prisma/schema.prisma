generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id        String   @id @default(uuid())
  title     String
  slug      String   @unique
  developer String
  image     String
  category  String
  popular   Boolean?

  product Product[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id     String  @id @default(uuid())
  amount Int
  bonus  Int?
  price  Int
  label  String?

  gameId String
  game   Game   @relation(fields: [gameId], references: [id])
}

model PaymentMethod {
  id   String @id @default(uuid())
  name String
  code String @unique
  type String
  icon String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
